package stringDemo;

public class Main {

	public static void main(String[] args) {
		String mesaj = "Bugün hava çok güzel.";
		System.out.println(mesaj);
		
		System.out.println("Eleman sayýsý : " + mesaj.length());
		System.out.println("5. eleman : " + mesaj.charAt(4));    // String içerisindeki deðeri yazdýrma. 
		System.out.println(mesaj.concat("Yaþasýn"));             // String sonuna string ekleme 
		System.out.println(mesaj);
		
		System.out.println(mesaj.startsWith("b"));      //String, A deðeri ile baþlýyor mu (output = boolean) büyük küçük har
		System.out.println(mesaj.endsWith("."));
		
		char[] karakterler = new char[5];
		mesaj.getChars(0, 5, karakterler, 0);
		System.out.println(karakterler);
		System.out.println(mesaj.indexOf("av"));
		System.out.println(mesaj.lastIndexOf("a"));
		
	}

}
