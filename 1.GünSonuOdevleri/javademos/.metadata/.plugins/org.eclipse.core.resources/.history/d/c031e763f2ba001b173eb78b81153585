package arkadasSayilar;

public class Main {

	public static void main(String[] args) {
		//220-284 -> bilinen en küçük arkadaþ sayýlar. 
		//Kendileri hariç pozitif tam bölenlerinin birbirine eþit olan sayýlara arkadaþ sayý denir
		// 220 bölenlerinin toplamý -> 284,  284 bölenlerinin toplamý -> 220
		
		int sayi1 = 220;
		int sayi2 = 284;
		int toplam1 = 0;
		int toplam2 = 0;
		
		for(int i=1; i<sayi1; i++) {
			if(sayi1 % i == 0) {
				toplam1 = toplam1 +i;
			}
		}
		
		for(int i=1; i<sayi1; i++) {
			if(sayi2 % i == 0) {
				toplam2 = toplam2 +i;
			}
		}
		

	}

}
